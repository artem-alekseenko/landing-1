-var linkItems = ['facebook-official', 'twitter','google-plus', 'linkedin']
-var linkUrls = ['facebook.com', 'twitter.com', 'google.com', 'linkedin.com']

footer.footer
    .footer__top
        .container
            .footer__title Get in touch
            .footer__links
                each item, key in linkItems
                    a.footer__social(href = 'https://' + linkUrls[key] targer = '_blank')
                        i(class = 'fa fa-' + item aria-hidden = 'true')
                            span.visually-hidden=linkItem
            .footer__text Subscribe to our newsletter to stay update with what is new
            form(action = "#" method = "post")
                .footer__field: input.footer__input(type="email" placeholder = "Email Addres")
                button(type = "submit").button Subscribe

